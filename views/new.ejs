<%- include ('partials/header') %>

<h1>Add a New Athlete!</h1>

<div class="athleteForm">
  <h2>Add New Stats</h2>
  <form class="ui form" action="/new/add" method="POST">
    <div class="form-group">
      <input
        class="form-control"
        type="text"
        name="nameFirst"
        placeholder="First Name"
      />
    </div>
    <div class="form-group">
      <input
        type="text"
        class="form-control"
        name="nameLast"
        placeholder="Last Name"
      />
    </div>
    <div class="form-group">
      <input class="form-control" type="text" name="age" placeholder="Age" />
    </div>
    <div class="form-group">
      <input
        class="form-control"
        type="text"
        name="level"
        placeholder="Level"
      />
    </div>
    <div class="form-group">
      <input
        class="form-control"
        type="text"
        name="image"
        placeholder="Image Path"
      />
    </div>
    <div class="form-group">
      <button class="btn btn-lg btn-primary btn-block">Submit</button>
    </div>
  </form>
</div>

<div id="logout"><a href="/logout">Log Out</a></div>
<%- include ('partials/footer') %>
